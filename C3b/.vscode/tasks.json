{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Build with Address Sanitizer",
        "type": "shell",
        "command": "make clean && make address",
        "group": {
          "kind": "build",
          "isDefault": true
        }
      },
      {
        "label": "Build for gdb",
        "type": "shell",
        "command": "make gdb",
        "group": "build"
      },
      {
        "label": "Clean",
        "type": "shell",
        "command": "make clean",
        "group": "build"
      }
    ]
  }
  